<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView1"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:text="정보과학관 1층"
                android:textColor="#fff"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/f1"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:layout_margin="8dp"
                android:background="@drawable/f0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:text="정보과학관 2층"
                android:textColor="#fff"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/f2"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:layout_margin="8dp"
                android:background="@drawable/f1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:text="정보과학관 3층"
                android:textColor="#fff"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/f3"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:layout_margin="8dp"
                android:background="@drawable/f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t4"
                android:text="정보과학관 4층"
                android:textColor="#fff"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/f4"
                android:layout_width="match_parent"
                android:layout_height="600px"
                android:layout_margin="8dp"
                android:background="@drawable/f3" />
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>